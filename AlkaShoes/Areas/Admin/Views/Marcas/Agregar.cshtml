@model AlkaShoes.Models.Entities.Marca
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Agregar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="agregar-editar-section">
    <h1>Agregar marca</h1>

    <form method="post" action="~/Admin/Marcas/Agregar"
        class="form-agregar-editar">
        <input type="text" placeholder="Nombre" required asp-for="NombreMarca" />
        <span id="error" class="error">@Html.ValidationSummary(true)</span>
        <div class="botones">
            <input type="submit" value="Agregar" id="btnAgregar" />
            <a href="~/Admin/Marcas/Index">
                <input type="button" value="Cancelar" id="btnCancelar" />
            </a>
        </div>
    </form>
</section>


